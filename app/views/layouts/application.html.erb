<!DOCTYPE html>
<html>
<head>
  <title>Inove</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render partial:'/layouts/header' %>
	<div class="row-fluid" id="big-wrapper">		
		
		<div class="container" id="wrapper">
			<div class="lateral-menu span2">
				<ul>
					<% Estudo.all.each do |estudo| %>
					<a href="/estudos/<%= estudo.id%>">
						<li style="background: <%= estudo.buttom_color%>; background-image: url(<%= estudo.button_img%>); background-repeat: no-repeat; ">
							<h2><%= estudo.title %></h2>
						</li>
					</a>
					<% end %>
			    </ul>
			</div>
			<div class="span10">
				<% if  flash[:notice] %>
				    <div class="alert">
				      <button type="button" class="close" data-dismiss="alert">X</button>
				      <%= flash[:notice] %>
				    </div>  
			 	 <% end %>
				<%= yield %>
			</div>
		</div>
	</div>
	<footer id="footer">
		<div class="container">
			<div class="span3">
				<h4 style="color: white">Â©Inove 2013</h4>
			</div>
		</div>
        
    </div>
	</footer>

</body>
	
</html>
