<!DOCTYPE html>
<html>
<head>
  <title>Inove</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render partial:'/layouts/header' %>
	
	<div class="lateral-menu span3">
		<ul>
			<% Estudo.all.each do |estudo| %>
			<a href="/estudos/<%= estudo.id%>">
				<li style="background: <%= estudo.buttom_color%>">
					<h2><%= estudo.title %></h2>
				</li>
			</a>
			<% end %>
	    </ul>
	</div>
	
	<div class="span12">
		<%= yield %>
	</div>

</body>
	
</html>
