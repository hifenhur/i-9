<h1>Questionarios</h1>

<table class='table '>
  <thead>
    <tr>
      <th><%= t 'title' %></th>
      <th><%= t 'description' %></th>
      <th></th>
      <% if current_user %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.title %></td>
        <td><%= survey.description %></td>
        <td><%= link_to (t 'Show'), survey %></td>
        <% if current_user %>
        <td><%= link_to (t 'Edit'), edit_survey_path(survey) %></td>
        <td><%= link_to (t 'Destroy'), survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= admin_link 'New Survey', new_survey_path %>
